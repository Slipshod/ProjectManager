<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Personal Project Manager</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
        <script type="text/javascript"src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
        <script src="../../Scripts/Libraries/mustache.js" type="text/javascript"></script>    
        <script type="text/javascript" src="~/Scripts/main.js"></script>

        <meta name="viewport" content="width=device-width" />
        <style type="text/css">
        .dialogOverlay{
        width: 100%;
        height: 100%;
        position: absolute;
        background-color: #ccc;
        opacity: .5;
        left: 0;
        top: 0;
        z-index: 9;
        }
        .dialog{
        position: absolute;
        width: 450px;
        left: 50%;
        top: 50%;
        margin-left: -25%;
        marging-top: -25%;
        z-index: 10;
        background-color: lightgrey; 
        }
        
        .closeWindow{
        position: absolute;
        display: block;
        top: 5px;
        right: 10px;
        text-decoration: none;
        font-size: 1.25em;
        }
    </style>    
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("MVC 4 Personal Project Manager", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @*@Html.Partial("_LoginPartial")*@ Login Disabled
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Projects", "Index", "Project")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Javascript", "Index", "Javascript")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Project Manager</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>
