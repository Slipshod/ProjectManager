<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Personal Project Manager</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />

@*        <script type="text/javascript"src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/Libraries/js")"></script>*@
@*        <script type="text/javascript"src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>*@
        <script src="~/Scripts/Libraries/jquery-1.7.2.js" type="text/javascript"></script>
        <script src="~/Scripts/Libraries/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
        <script src="~/Scripts/Libraries/mustache.js" type="text/javascript"></script>
        <script src="~/Scripts/Libraries/underscore.js" type="text/javascript"></script>
        <script src="~/Scripts/base.js" type="text/javascript"></script>       
        <script src="~/Scripts/main.js" type="text/javascript" ></script>
        <meta name="viewport" content="width=device-width" />
        
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("MVC 4 Personal Project Manager", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @*@Html.Partial("_LoginPartial")*@ Login Disabled
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Project Manager</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li>Content and Design by: CW</li>
                        <li>Guidance by JW</li>
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>
