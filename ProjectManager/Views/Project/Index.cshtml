<script type="text/javascript">
    //Replace this with JSON from /Project/GetProjects()
    //Once that is done, can get rid of the Html.Action("ProjectList", "Project")
    $(document).ready(function () {
        $.getJSON('/Project/GetProjectsJson', null, function (data) {
            var listTemplate = $('#projectListTemplate').html();
            var outputHtml = Mustache.to_html(listTemplate, data);
            $('#tablerow').html(outputHtml);

            console.log(data);
        }); 
    });
</script> 

<div class="projectlist">
        <table>
            <thead>
                <tr>
                    <th>Short Description</th>
                    <th>Detail</th>
                    <th>Completed</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tablerow"> </tbody>
        </table>
    </div>
   
<script type="text/mustache" id="projectListTemplate">
{{#projects}}
<tr>    
    <td>{{Title}}</td>
    <td>{{Detail}}</td>
    <td>
        <input type="checkbox" checked="{{Completed}}"/>
    </td>
    <td>
        <a href="/Project/Edit/{{ProjectID}}">Edit</a>  | 
        <a href="/Project/Delete/{{ProjectID}}">Delete</a>
    </td>
</tr>
{{/projects}}
</script>

